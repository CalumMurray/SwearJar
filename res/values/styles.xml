<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
    <color name="window_background">#222222</color>
    <color name="button_background">#27AAE1</color>

    <style name="AppTheme" parent="android:Theme.NoTitleBar">
        
    </style>
    
    <style name="EditTextTheme" >
	    <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:layout_margin">@dimen/padding_large</item>
	    <item name="android:background">#cfff</item>
	    <item name="android:padding">@dimen/padding_medium</item>
	    <item name="android:textSize">@dimen/text_extra_large</item>    
    </style>
    
    <style name="ButtonTheme" parent="android:attr/buttonStyleInset">
        <item name="android:background">@color/button_background</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:padding">@dimen/padding_large</item>
        <item name="android:layout_margin">@dimen/padding_large</item>
    </style>
    
    <style name="ListSubItemTheme" parent="android:attr/textAppearanceSearchResultSubtitle">
        <item name="android:layout_width">wrap_content</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:paddingLeft">@dimen/padding_medium</item>
	    <item name="android:paddingTop">@dimen/padding_medium</item>
    </style>

</resources>