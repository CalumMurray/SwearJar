<?xml version="1.0" encoding="UTF-8"?>

<!-- Layout Used For Preference Menu - Called after selecting Preferences from 'MENU' button's menu.xml -->
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:title="@string/title_word"
        android:key="blacklistWord"
        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
		android:inputType="text" />

    <EditTextPreference
        android:title="@string/title_charge"
        android:key="blacklistCharge"
        android:inputType="number"
        android:digits="1234567890." />
    
    <ListView 
        android:id="@+id/prefsBlacklist"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@android:color/transparent"
        android:divider="#CCCCCC"
        android:dividerHeight="1dp" />
        

</PreferenceScreen>