<?xml version="1.0" encoding="UTF-8"?>

<!-- Layout Used For Preference Menu - Called after selecting Preferences from 'MENU' button's menu.xml -->
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" >

    <EditTextPreference
        android:title="@string/title_word"
        android:key="blacklistWord"
        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
		android:inputType="text"/>

    <EditTextPreference
        android:title="@string/title_charge"
        android:key="blacklistCharge"
        android:inputType="phone"
        android:digits="1234567890."/>

</PreferenceScreen>